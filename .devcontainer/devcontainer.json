{
	"name": "ASP.NET Core (.NET 8.0)",
	"image": "mcr.microsoft.com/devcontainers/dotnet:1-8.0-bookworm",
	
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/git:1": {}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit",
				"ms-dotnettools.csharp",
				"ms-dotnettools.vscode-dotnet-runtime",
				"kreativ-software.csharpextensions",
				"jongrant.csharpsortusings",
				"ms-azuretools.vscode-docker",
				"EditorConfig.EditorConfig"
			],
			"settings": {
				"dotnet.defaultSolution": "wuchmiITHome.sln"
			}
		}
	},

	"forwardPorts": [5023, 7004],
	"portsAttributes": {
		"5023": {
			"label": "HTTP",
			"onAutoForward": "notify"
		},
		"7004": {
			"label": "HTTPS",
			"onAutoForward": "notify"
		}
	},

	"postCreateCommand": "if [ -f /etc/apt/sources.list.d/yarn.list ]; then sudo mv /etc/apt/sources.list.d/yarn.list /etc/apt/sources.list.d/yarn.list.disabled; fi && sudo apt-get update && sudo apt-get install -y git-lfs && git lfs install && dotnet restore && dotnet build && dotnet tool install --global dotnet-ef",

	"postStartCommand": "dotnet ef database update",

	"remoteUser": "vscode"
}
