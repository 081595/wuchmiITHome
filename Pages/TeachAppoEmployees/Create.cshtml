@page
@model CreateModel
@{
    ViewData["Title"] = "Create Teach Appo Employee";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>@ViewData["Title"]</h1>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post" class="needs-validation" novalidate>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Composite Key Fields (Required & Immutable)</h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="TeachAppoEmployee.Yr" class="form-label"></label>
                                <input asp-for="TeachAppoEmployee.Yr" class="form-control" type="number" min="2000" max="2099" required />
                                <span asp-validation-for="TeachAppoEmployee.Yr" class="text-danger"></span>
                                <small class="form-text text-muted">Academic year</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="TeachAppoEmployee.IdNo" class="form-label"></label>
                                <input asp-for="TeachAppoEmployee.IdNo" class="form-control" maxlength="60" required />
                                <span asp-validation-for="TeachAppoEmployee.IdNo" class="text-danger"></span>
                                <small class="form-text text-muted">HKID or similar (max 60 chars)</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="TeachAppoEmployee.Birthday" class="form-label"></label>
                                <input asp-for="TeachAppoEmployee.Birthday" class="form-control" type="date" required />
                                <span asp-validation-for="TeachAppoEmployee.Birthday" class="text-danger"></span>
                                <small class="form-text text-muted">YYYY-MM-DD format</small>
                            </div>
                        </div>

                        <hr />

                        <h5 class="card-title">Employee Information</h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="TeachAppoEmployee.EmplNo" class="form-label"></label>
                                <input asp-for="TeachAppoEmployee.EmplNo" class="form-control" maxlength="6" required />
                                <span asp-validation-for="TeachAppoEmployee.EmplNo" class="text-danger"></span>
                                <small class="form-text text-muted">Exactly 6 characters</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TeachAppoEmployee.ChName" class="form-label"></label>
                                <input asp-for="TeachAppoEmployee.ChName" class="form-control" maxlength="60" required />
                                <span asp-validation-for="TeachAppoEmployee.ChName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="TeachAppoEmployee.EnName" class="form-label"></label>
                                <input asp-for="TeachAppoEmployee.EnName" class="form-control" maxlength="60" required />
                                <span asp-validation-for="TeachAppoEmployee.EnName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TeachAppoEmployee.Email" class="form-label"></label>
                                <input asp-for="TeachAppoEmployee.Email" class="form-control" type="email" maxlength="60" required />
                                <span asp-validation-for="TeachAppoEmployee.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="TeachAppoEmployee.RefreshToken" class="form-label"></label>
                                <input asp-for="TeachAppoEmployee.RefreshToken" class="form-control" maxlength="60" required />
                                <span asp-validation-for="TeachAppoEmployee.RefreshToken" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TeachAppoEmployee.RefreshTokenExpired" class="form-label"></label>
                                <input asp-for="TeachAppoEmployee.RefreshTokenExpired" class="form-control" type="datetime-local" />
                                <span asp-validation-for="TeachAppoEmployee.RefreshTokenExpired" class="text-danger"></span>
                                <small class="form-text text-muted">Optional: Token expiration time</small>
                            </div>
                        </div>

                        <hr />

                        <div class="alert alert-info" role="alert">
                            <strong>Note:</strong> Created and Updated timestamps are automatically set by the system.
                        </div>

                        <div class="card-footer bg-light">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
